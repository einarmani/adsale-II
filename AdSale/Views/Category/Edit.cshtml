@model AdSale.Models.CategoryModel

@{
	ViewData["Title"] = "Uppfæra flokk";
}

<br /><br />
<div class="row">
	<div class="col-md-6">

		@using (Html.BeginForm())
		{
			<div class="form-group">
				@Html.LabelFor(m => m.Name)
				@Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nafn flokks" })
				@Html.ValidationMessageFor(m => m.Name)
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.IsActive)
				@Html.CheckBoxFor(m => m.IsActive)
			</div>

			<button type="submit" class="btn btn-primary">Uppfæra</button>
			@Html.ActionLink("Til baka", "Index")

			@Html.HiddenFor(m => m.Id)
			@Html.HiddenFor(m => m.ParentId)
		}

	</div>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}