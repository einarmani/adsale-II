@model AdSale.Models.MediaModel

@{
	ViewData["Title"] = "Nýskrá miðil";
}

<br /><br />
<div class="row">
	<div class="col-md-6">
		
		@using (Html.BeginForm())
		{
			<div class="form-group">
				@Html.LabelFor(m => m.Name)
				@Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nafn miðils" })
				@Html.ValidationMessageFor(m => m.Name)
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.IsActive)
				@Html.CheckBoxFor(m => m.IsActive)
			</div>

			<button type="submit" class="btn btn-primary">Nýskrá</button>
			@Html.ActionLink("Til baka", "Index")
		}

	</div>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}