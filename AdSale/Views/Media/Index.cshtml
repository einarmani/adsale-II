@model System.Collections.Generic.ICollection<AdSale.ServiceModels.Media>

@{
    ViewData["Title"] = "Auglýsingaflokkar";
}

<br />

<div class="left">
    <div class="inner">
        <div class="row">
            <div class="col-md-10">
                <h2>Miðlar</h2>
            </div>
            <div class="col-md-2">
                <a class="btn btn-primary pull-right" asp-Controller="Media" asp-Action="Create">Nýskrá miðil</a>
            </div>
        </div>
        <br />

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Færa</th>
                <th>Nafn</th>
                <th>Virkur</th>
            </tr>
            </thead>
            <tbody>

            @if (Model != null)
            {
                int i = 0;
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (i != 0)
                            {
                                @Html.ActionLink("↑", "MoveItem", new {index = i, move = -1}, new {onclick = "localStorage.setItem('my-scroll-pos', $(window).scrollTop());"})
                            }
                            @if (i != Model.Count - 1)
                            {
                                @Html.ActionLink("↓", "MoveItem", new {index = i, move = 1}, new {onclick = "localStorage.setItem('my-scroll-pos', $(window).scrollTop());"})
                            }
                        </td>
                        <td>
                            @Html.ActionLink(item.Name, "Edit", new {id = item.Id})
                        </td>
                        <td>
                            <span class="@Html.Raw(item.IsActive ? "glyphicon glyphicon-ok" : "glyphicon glyphicon-remove")" title="@Html.Raw(item.IsActive ? "Virkur flokkur" : "Óvirkur flokkur")" style="color: @Html.Raw(item.IsActive ? "green" : "red"); left: 11px;"></span>
                        </td>
                    </tr>
                    i++;
                }
            }
            </tbody>
        </table>
    </div>
</div>

<br />
<br />
<br />